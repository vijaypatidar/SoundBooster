<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.vkpapps.soundbooster.fragments.HostSongFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_host_song">

    </fragment>
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.vkpapps.soundbooster.fragments.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_local"
        android:name="com.vkpapps.soundbooster.fragments.LocalSongFragment"
        android:label="@string/title_my_song"
        tools:layout="@layout/fragment_local_song">

    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.vkpapps.soundbooster.fragments.ProfileFragment"
        android:label="My Profile"
        tools:layout="@layout/fragment_user_detail" />
    <fragment
        android:id="@+id/navigation_musicPlayer"
        android:name="com.vkpapps.soundbooster.fragments.MusicPlayerFragment"
        android:label="Music Player"
        tools:layout="@layout/fragment_music_player" />
</navigation>
