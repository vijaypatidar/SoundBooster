<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.vkpapps.soundbooster.fragments.HostSongFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_local_song" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.vkpapps.soundbooster.fragments.ClientControlFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_client_control" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.vkpapps.soundbooster.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_local"
        android:name="com.vkpapps.soundbooster.fragments.LocalSongFragment"
        android:label="@string/title_my_song"
        tools:layout="@layout/fragment_local_song" />
</navigation>
